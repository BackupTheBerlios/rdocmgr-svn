<h1>Listing documents</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Project</th>
    <th>Document type</th>
    <th>Doc number</th>
    <th>Description</th>
    <th>Fname suffix</th>
  </tr>

<% for document in @documents %>
  <tr>
    <td><%=h document.id %></td>
    <td><%=h document.project.name %></td>
    <td><%=h document.document_type.name %></td>
    <td><%=h document.doc_number %></td>
    <td><%=h document.description %></td>
    <td><%=h document.fname_suffix %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
  <!--  <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>

