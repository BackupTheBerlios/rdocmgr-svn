
<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :project_number %><br />
    <%= f.text_field :project_number %>
  </p>
  <p>
    <%= f.label :fs_root %><br />
    <%= f.text_field :fs_root %>
  </p>
  <p>
  <% if @mode=="new" then %>
        <%= f.submit "Create"  %>
    <% else %>
        <%= f.submit "Update"  %>
    <% end %>
  </p>
<% end %>
